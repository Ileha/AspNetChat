@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AspNetChat.Pages.PersonModel
<h2>@Model.Message</h2>
<form method="post">
    <label for="name">Name</label><br />
    <input type="text" name="name" id="name" value="@Model.Person.Name" /><br /><br />
    <label for="age">Age</label><br />
    <input type="number" name="age" id="age" value="@Model.Person.Age" /><br /><br />
    <input type="submit" value="Send" />
</form>
